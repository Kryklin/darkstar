{
  "name": "darkstar",
  "version": "1.4.0",
  "productName": "Darkstar",
  "description": "Darkstar Application",
  "author": "Kryklin",
  "main": "dist/electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kryklin/darkstar.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "electron:build": "tsc --p tsconfig.electron.json",
    "electron:dev": "concurrently -k \"ng serve\" \"npm:electron:watch\"",
    "electron:watch": "wait-on http://localhost:4200 && nodemon --config nodemon.json",
    "build:all": "ng build --configuration production --base-href ./ && npm run electron:build",
    "package": "npm run build:all && electron-forge package",
    "make": "npm run build:all && electron-forge make",
    "publish": "npm run build:all && electron-forge publish"
  },
  "prettier": {
    "printWidth": 140,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.15",
    "@angular/router": "^20.3.15",
    "crypto-js": "^4.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "material-icons": "^1.13.14",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "update-electron-app": "^3.1.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "21.0.1",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "eslint": "^9.39.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.1.10",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4",
    "wait-on": "^9.0.1"
  },
  "overrides": {
    "tmp": "0.2.5"
  }
}
